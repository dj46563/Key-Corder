<UserControl x:Class="Keycorder_GUI.KeyboardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keycorder_GUI"
             mc:Ignorable="d" 
             Width="60" Height="60"
             Loaded="KeyboardButton_OnLoaded">
    <Border BorderBrush="Black" BorderThickness="4">
        <Grid DockPanel.Dock="Bottom" Name="Panel">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Name="DurationTextBlock" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Grid.Row="1" Name="LetterTextBlock" HorizontalAlignment="Center" FontSize="16">G</TextBlock>
            <TextBlock Grid.Row="2" Name="BehaviorTextBlock" HorizontalAlignment="Center" FontSize="12">Cough</TextBlock>
        </Grid>
    </Border>
</UserControl>
