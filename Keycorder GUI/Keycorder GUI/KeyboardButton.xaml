<UserControl x:Class="Keycorder_GUI.KeyboardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Keycorder_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Width="60" Height="60"
             Loaded="KeyboardButton_OnLoaded">
    <Border BorderBrush="Black" BorderThickness="4">
        <DockPanel Name="Panel" Background="White">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                <TextBlock Name="DurationTextBlock" HorizontalAlignment="Center"></TextBlock>
            </StackPanel>
            
            <TextBlock Name="LetterTextBlock" DockPanel.Dock="Bottom" HorizontalAlignment="Center" FontSize="20" Margin="3">G</TextBlock>
        </DockPanel>
    </Border>
</UserControl>
